<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:context="com.example.admin.lahacks2017.MainActivity"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/awkpepe"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:textSize="25dp"
            android:textColor="#01184A"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text="Awkward..." />
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:textStyle="italic"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:text="Click the button below and watch the magic happen."/>

        <Button
            android:layout_width="match_parent"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:text="Click me!"
            android:background="#FDC511"
            android:layout_height="40dp"
            android:onClick="chromeCustomTabGoogle" />

    </LinearLayout>